echo "Enter a number:"
read number
factorial=1
for (( i=1; i<=number; i++ )); do
factorial=$(( factorial * i ))
done
echo "Factorial of $number: $factorial"

mlm@mlm-ThinkCentre-E73:~/Desktop/ACN$ chmod +x fact.sh
mlm@mlm-ThinkCentre-E73:~/Desktop/ACN$ ./fact.sh
Enter a number:
5
Factorial of 5: 120
